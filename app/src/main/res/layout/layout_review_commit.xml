<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <!--제보 등록 창-->
    <!--    리뷰 -> 제보하기 -> 확인-->

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/listAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mapiconshape"
        android:drawableTop="@drawable/review_review_newpost"
        android:gravity="center|top"
        android:text="새 글 작성"
        android:textAlignment="center"
        android:textColor="#03A9F4"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/review_commit_title_xml" />

        <TextView
            android:id="@+id/review_title"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:background="@drawable/mapiconshape"
            android:text="리뷰 제목\n"
            android:textAlignment="center"
            android:textColor="#03A9F4"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            app:srcCompat="@drawable/review_commot_rate_xml" />

        <TextView
            android:id="@+id/review_rating"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:background="@drawable/mapiconshape"
            android:hint="@string/common_google_play_services_enable_title"
            android:text="별점 \n"
            android:textAlignment="center"
            android:textColor="#03A9F4"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            app:srcCompat="@drawable/review_commit_content" />

        <TextView
            android:id="@+id/review_contents"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:background="@drawable/mapiconshape"
            android:text="리뷰내용 \n"
            android:textAlignment="center"
            android:textColor="#03A9F4"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>